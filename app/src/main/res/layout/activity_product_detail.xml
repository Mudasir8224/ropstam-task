<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:id="@+id/firstContainer"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:padding="8dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_left_arrow"
            android:layout_width="34dp"
            android:layout_height="34dp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondContainer"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/firstContainer"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:src="@drawable/cushion_sofa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sofa Baleria"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/thirdContainer"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/secondContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/rating_bg"
            android:layout_width="60dp"
            android:layout_height="24dp">

            <TextView
                android:layout_marginRight="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_star"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1034 Ratings | "
                android:textColor="@color/black"/>

            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="104 Reviews"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/fourthContainer"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/thirdContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$7799/Month"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fiveContainer"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fourthContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refundable Deposit"
            android:textSize="17sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1899"
            android:textSize="17sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sixContainer"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/fiveContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/blue_op"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get 10% off on this product by"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_below="@id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="using coupon code"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/white"/>


                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RENT10"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_reward"/>

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All Offers"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/sevenContainer"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/sixContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Size"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"/>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_bg"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="6*3"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6*4"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6*5"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6*6"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eightContainer"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sevenContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Tenure"
            android:textSize="17sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:background="@drawable/tenure_bg"
            android:layout_width="180dp"
            android:layout_height="40dp">

            <EditText
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:cursorVisible="true"
                android:hint="Please Enter your tenure"
                android:textColor="@color/black"
                android:textColorHint="@color/light_black"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/blue_op"
        android:layout_marginTop="20dp"
        android:layout_below="@id/eightContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@id/textView"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_below="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5039"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for 36Months"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Add To Cart"/>

    </RelativeLayout>


</RelativeLayout>